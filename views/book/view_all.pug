extends ../layout

block content
    h3 Books
    a(href='/books/add') Add New Book
    table
        thead
            tr
                th title
                //th author
                th publisher
                th genre
                th pages
                th image
                th description
        tbody
            each book in books
                tr
                    td= book.title
                    //td= book.author
                    td= book.publisher
                    td= book.genre
                    td= book.pages
                    td= book.image
                    td= book.description
                    td
                        a(href=`/books/profile/${book.id}`) View Book
