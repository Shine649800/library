mixin authorForm(author, saveUrl, cancelUrl)

    div.form-container
        form(action=saveUrl method='post')
            div.form-input
                label(for='first') First Name
                input(id='first' name='first' value= author.first_name)

            div.form-input
                label(for='last') Last Name
                input(id='last' name='last' value= author.last_name)

            div.form-buttons
                a.button(href=cancelUrl) Cancel
                button.button.primary(type='submit') Save